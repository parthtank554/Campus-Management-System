@model Campus_Management_System.Models.EmployeeModel
@using Microsoft.AspNetCore.Http
@if (Context.Session?.GetString("username") != null)
{
    <div class="card">
        <div class="card-header bg-success text-white text-uppercase">
            <h4>Add Employee</h4>
        </div>
        <form asp-action="AddEmployee">
            <div class="form-group">
                Name:
                <input type="text" asp-for="Name" class="form-control" id="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                Department:
                <input type="text" asp-for="Department" class="form-control" id="Department">
                <span asp-validation-for="Department" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                Salary:
                <input type="text" asp-for="Salary" class="form-control" id="Salary">
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <button type="submit" class="btn btn-success rounded-1">Add Employee</button>
            </div><br />
        </form>
    </div>
}

